{% extends 'base.html.twig' %}

{% block title %} Home{% endblock %}
{% block front_nav_right_section %}<a class="navbar-brand" href="{{ path('admin') }}">Admin</a>{% endblock %}

{% block body %}

<div class="container">

    <div class="row">
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6">
                
                    <div class="jumbotron">
                        <div class="col-sm-8">
                            <div class="card-body d-flex flex-column align-items-start">
                                {# <strong class="d-inline-block mb-2 text-primary">World</strong> #}
                                <h3 class="mb-0">
                                    <a class="text-dark" href="{{path('show_post', {id: post.getId()})}}">{{post.getTitle()}}</a>
                                </h3>
                                <div class="mb-1 text-muted">{{post.getCreatedAt()|date(date_format)}}</div>
                                <p class="card-text mb-auto">{{post.getContent()|striptags|slice(0, 50)}}</p>
                                <a href="{{path('show_post', {id: post.getId()})}}">Continue reading</a>
                            </div>
                        </div>
                        <div class="col-sm-4"><img data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" style="max-width: 100%;" src="{{('uploads/posts/' ~ post.getPostThumbnail()) }}" data-holder-rendered="true">
src="{{('uploads/posts/' ~ post.getPostThumbnail()) }}" </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{% endblock %}

	
